<%= simple_form_for([current_user, Glow.new], multipart: true) do |f| %>
<%= f.error_notification %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="well well-lg">
        <h3 style="text-align: center">Let your light shine! What glow do you have for the world?</h3>
      </div>
      <div class="form-inputs">
        <%= f.input :subject %>
        <%= f.input :quote, required: true %>
        <%= f.input :author %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6">
      <div class="well well-lg">
        <h2 style="text-align: center">Look on the bright side!  </h2>
      </div>

      <span class="avatar-image"><%= image_tag current_user.avatar.url(:thumb) %></span>
      <h3 class="avatar-name"> <%= @user.username.capitalize %>'s Glows</h3><br />
      <% @user.glows.each do |glow| %>
      <div class='block'>
        <blockquote>
          <p>"<%= glow.quote %>"</p>
          <small><cite title="Source Title">by: <%= glow.author %> </cite></small>
          <small><%= glow.subject %></small>
        </blockquote>
      <% end %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>
